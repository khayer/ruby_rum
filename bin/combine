#!/usr/bin/env ruby
require 'ruby_rum'
require 'optparse'
include Fasta

options={ :seriell => nil,
          :fastq => nil,
          :first => nil,
          :output => nil,
          :number_of_ns => 30
        }

OptionParser.new do |opts|
  opts.banner = "Usage: combine [options]"

  opts.on("-1", :REQUIRED, String, "First input file (FASTA/FASTQ)") do |i|
    options[:first] = i
    options[:output] = i + "combined" unless option[:output]
  end

  opts.on("-2", :REQUIRED, String, "Second input file (FASTA/FASTQ") do |i|
    options[:second] = i
  end

  opts.on("-o", "Output name. (DEFAULT: <first_input>combined)") do |i|
    options[:output] = i
  end

  opts.on("-n", "Number of N's inbetween the two sequences. (DEFAULT: 30)") do |i|
    options[:number_of_ns]=i
  end

  opts.on_tail("-h","Show this message") do
    puts opts
    exit
  end
end.parse!

usage =<<EOF

------------------------------- Usage ---------------------------------

  #{$0} fasta_file1 fasta_file2 ouput_file [OPTS]

-----------------------------------------------------------------------

  Combines two fasta files into one with x N's between
  the sequences

-----------------------------------------------------------------------

EOF

STDERR.puts usage unless ARGV.length > 1





